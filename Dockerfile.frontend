FROM node:20-alpine

WORKDIR /app

COPY package.json package-lock.json angular.json tsconfig.json tsconfig.app.json tsconfig.spec.json ./
COPY .browserslistrc .postcssrc.json tailwind.config.js ./
COPY public ./public
COPY src ./src

RUN npm ci

EXPOSE 4000

CMD ["npx", "ng", "serve", "--host", "0.0.0.0", "--port", "4000", "--disable-host-check"]
